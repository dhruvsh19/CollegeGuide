<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/r1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#999999"
    tools:context=".Activity2">

    <LinearLayout
        android:id="@+id/rel1"
        android:layout_width="314dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="90dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Merit Percentile"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/e1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rel2"
        android:layout_width="172dp"
        android:layout_height="89dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="213dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="167dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="Gujcet Percentile"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rel3"
        android:layout_width="151dp"
        android:layout_height="81dp"
        android:layout_alignBottom="@+id/rel2"
        android:layout_toEndOf="@+id/rel2"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/e2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rel4"
        android:layout_width="238dp"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="145dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/res"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rel5"
        android:layout_width="136dp"
        android:layout_height="87dp"
        android:layout_alignEnd="@+id/rel1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#a6bbf2"
            android:onClick="goToActivity3"
            android:text="Next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="132dp"
        android:layout_height="86dp"
        android:layout_alignStart="@+id/rel1"
        android:layout_alignTop="@+id/rel5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#a6bbf2"
            android:text="Result" />
    </LinearLayout>

</RelativeLayout>